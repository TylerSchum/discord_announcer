{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "auto",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["node_modules/@types", "src/global.d.ts"],
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "lib": ["es6"]
  },
  "include": ["src/**/*", "src/global.d.ts"]
}
